# ===========================================
# Samurai Insurance Frontend Environment Variables
# ===========================================
# Copy this file to .env.local and fill in the values

# -----------------------------------------
# Supabase Configuration
# -----------------------------------------
# Server-side URL and service key (for API routes)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SECRET_KEY=your-supabase-service-role-key

# Client-side Supabase configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your-publishable-key

# -----------------------------------------
# reCAPTCHA Configuration
# -----------------------------------------
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
NEXT_PUBLIC_RECAPTCHA_VERSION=v3
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# -----------------------------------------
# Vercel Configuration
# -----------------------------------------
VERCEL_API_TOKEN=your-vercel-api-token
VERCEL_ANALYTICS_DRAIN_SECRET=your-analytics-drain-secret

# -----------------------------------------
# EmailJS Configuration
# -----------------------------------------
EMAILJS_SERVICE_ID=your-service-id
EMAILJS_TEMPLATE_ID=your-template-id
EMAILJS_PUBLIC_KEY=your-public-key
EMAILJS_PRIVATE_KEY=your-private-key

# -----------------------------------------
# Analytics
# -----------------------------------------
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# -----------------------------------------
# Facebook Webhook
# -----------------------------------------
FACEBOOK_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# -----------------------------------------
# Backend URL Configuration
# -----------------------------------------
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080
NEXT_PUBLIC_BASE_URL=http://localhost:3000
